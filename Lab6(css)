.pokemon-sprite {
    position: absolute;
    width: 96px; /* Ширина спрайту покемона */
    height: 96px; /* Висота спрайту покемона */
    animation: animatePokemon 1s steps(4) infinite; /* Анімація спрайту */
}

@keyframes animatePokemon {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(-96px); /* Відстань, яку пройде спрайт за один цикл анімації */
    }
}
